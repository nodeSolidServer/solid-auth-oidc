{
  "name": "@solid/solid-auth-oidc",
  "version": "0.6.1",
  "engines": {
    "node": ">= 6.0"
  },
  "description": "Authentication library for Solid client based on OAuth2/OpenID Connect",
  "main": "./lib/index.js",
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "npm run build-lib",
    "build-dist": "webpack --progress",
    "build-lib": "babel src -d lib",
    "dist": "npm run build && npm run build-dist",
    "mocha": "nyc mocha test/*.js",
    "postversion": "git push --follow-tags",
    "prepublishOnly": "npm run build && npm run test",
    "preversion": "npm test",
    "standard": "standard src/*",
    "test": "npm run standard && npm run mocha"
  },
  "nyc": {
    "reporter": [
      "html",
      "text-summary"
    ],
    "cache": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/solid/solid-auth-oidc"
  },
  "keywords": [
    "authentication",
    "oidc",
    "openid",
    "oauth",
    "oauth2",
    "webid",
    "solid",
    "decentralized",
    "web",
    "rdf",
    "ldp",
    "linked",
    "data",
    "rest"
  ],
  "author": "Dmitri Zagidulin <dzagidulin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/node-solid-server/solid-auth-oidc/issues"
  },
  "homepage": "https://github.com/node-solid-server/solid-auth-oidc",
  "dependencies": {
    "@solid/oidc-rp": "^0.12.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-loader": "^8.4.1",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "dirty-chai": "^2.0.1",
    "localstorage-memory": "^1.0.3",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.7.0",
    "standard": "^17.1.2",
    "webpack": "^5.104.1",
    "whatwg-url": "^15.1.0"
  },
  "standard": {
    "globals": [
      "localStorage",
      "URL",
      "URLSearchParams"
    ]
  }
}
